<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Crops" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="52dp"
            android:text="Add Your Crops For Auction"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/_nameofcrop"
            android:layout_width="286dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="name of crop "
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/_typesofcropspinner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/_typesofcropspinner"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Spinner
            android:id="@+id/_typesofcropspinner"
            android:layout_width="286dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/_quantity"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/_quantity"
            app:layout_constraintTop_toBottomOf="@+id/_nameofcrop" />

        <EditText
            android:id="@+id/_priceperunit"
            android:layout_width="286dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="price per unit"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/_expirydate"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/_expirydate"
            app:layout_constraintTop_toBottomOf="@+id/_quantity" />

        <EditText
            android:id="@+id/_expirydate"
            android:layout_width="289dp"
            android:layout_height="39dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="expiry date"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/_address"
            app:layout_constraintStart_toStartOf="@+id/_address"
            app:layout_constraintTop_toBottomOf="@+id/_priceperunit" />

        <EditText
            android:id="@+id/_address"
            android:layout_width="287dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="address "
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/_phonenumber"
            app:layout_constraintStart_toStartOf="@+id/_phonenumber"
            app:layout_constraintTop_toBottomOf="@+id/_expirydate" />

        <EditText
            android:id="@+id/_phonenumber"
            android:layout_width="285dp"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="phone number"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/_quality"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="@+id/_quality"
            app:layout_constraintTop_toBottomOf="@+id/_address" />

        <EditText
            android:id="@+id/_quality"
            android:layout_width="283dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="quality "
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_phonenumber" />

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="281dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:text="SUBMIT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/_quality" />

        <EditText
            android:id="@+id/_quantity"
            android:layout_width="285dp"
            android:layout_height="49dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="quantity"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/_priceperunit"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/_priceperunit"
            app:layout_constraintTop_toBottomOf="@+id/_typesofcropspinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>